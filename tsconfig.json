{
  "compilerOptions": {
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2020",
    "noEmit": true,
    "lib": ["dom", "es5", "ES2015", "es2016", "es2017", "es2018", "ES2019"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "strict": true
  },
  "paths": {
    "^/*": ["src/*"]
  },
  "include": ["src/**/*"],
  "compileOnSave": false
}
